<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DataNascitaActivity" >
    
    <Button
        android:id="@+id/registration_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/confirm_button_label" />

    <Button
        android:id="@+id/registration_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/back_button_label" />
    
    <!-- MONTH  -->
    <TextView
    android:id="@+id/txt_month"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="Gennaio"
    android:gravity="center"
    android:textSize="45sp"
    android:textAppearance="?android:attr/textAppearanceLarge" />
    
	<Button
	   android:id="@+id/btn_month_up"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:layout_above="@id/txt_month"
	   android:layout_centerHorizontal="true"
	   android:background="@drawable/arrow_up"
	   android:text="" />

    <Button
        android:id="@+id/btn_month_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_month"
        android:layout_centerHorizontal="true"
        android:background="@drawable/arrow_down"
        android:text="" />
    
    
    <!-- DAY  -->
    
        <TextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@id/txt_month"
        android:text="1"
        android:textSize="45sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Button
             android:id="@+id/btn_day_up"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@id/btn_month_up"
             android:layout_alignBottom="@id/btn_month_up"
             android:layout_marginRight="19dp"
             android:layout_toLeftOf="@id/txt_month"
             android:layout_above="@id/txt_day"
             android:background="@drawable/arrow_up" />
        
        <Button
             android:id="@+id/btn_day_down"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@id/btn_month_down"
             android:layout_alignBottom="@id/btn_month_down"
             android:layout_marginRight="19dp"
             android:layout_toLeftOf="@id/txt_month"
             android:layout_below="@id/txt_day"
             android:background="@drawable/arrow_down" />
    
    
    <!-- YEAR  -->
    
    
        <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/txt_month"
        android:text="1940"
        android:textSize="45sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
          <Button
             android:id="@+id/btn_year_up"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@id/btn_month_up"
             android:layout_alignBottom="@id/btn_month_up"
             android:layout_marginLeft="19dp"
             android:layout_toRightOf="@id/txt_month"
             android:layout_above="@id/txt_year"
             android:background="@drawable/arrow_up" />
        
        <Button
             android:id="@+id/btn_year_down"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@id/btn_month_down"
             android:layout_alignBottom="@id/btn_month_down"
             android:layout_marginLeft="19dp"
             android:layout_toRightOf="@id/txt_month"
             android:layout_below="@id/txt_year"
             android:background="@drawable/arrow_down" />
    

         

</RelativeLayout>