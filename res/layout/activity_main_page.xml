<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/dark_blue"
    tools:context=".MainPageActivity" >

    <Button
        android:id="@+id/new_story_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/add_post"/>

    <Button
        android:id="@+id/to_define_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/to_define"/>

    <Button
        android:id="@+id/story_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_story_btn"
        android:layout_alignBottom="@+id/new_story_btn"
        android:layout_marginRight="150dp"
        android:layout_toLeftOf="@id/new_story_btn"
        android:background="@drawable/post"/>

    <Button
        android:id="@+id/friend_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/new_story_btn"
        android:layout_alignBottom="@+id/new_story_btn"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@id/new_story_btn"
        android:background="@drawable/friend_list"/>

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/to_define_btn"
        android:layout_alignBottom="@+id/to_define_btn"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@id/to_define_btn"
        android:background="@drawable/settings"/>

    <Button
        android:id="@+id/find_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/to_define_btn"
        android:layout_alignBottom="@+id/to_define_btn"
        android:layout_marginRight="150dp"
        android:layout_toLeftOf="@id/to_define_btn"
        android:background="@drawable/find_friend"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_story_btn"
        android:layout_centerHorizontal="true"
        android:text="Nuova Storia"
        android:background="@color/silver" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/setting_btn"
        android:text="Impostazioni"
        android:background="@color/silver"  />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/friend_list_btn"
        android:layout_below="@+id/friend_list_btn"
        android:layout_marginRight="26dp"
        android:text="Lista Amici" 
        android:background="@color/silver" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView2"
        android:text="Da definire" 
        android:background="@color/silver" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/story_btn"
        android:layout_marginRight="31dp"
        android:text="Storie"
        android:background="@color/silver"  />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/find_friend_btn"
        android:text="Cerca Amici" 
        android:background="@color/silver" />

</RelativeLayout>