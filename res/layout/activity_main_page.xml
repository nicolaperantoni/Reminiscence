<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainPageActivity" >

    <RelativeLayout
        android:id="@+id/panelDataNascita"
        android:layout_width="450dp"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@color/dark_blue" >

        <Button
            android:id="@+id/new_story_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"            
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_add_story" />

        <Button
            android:id="@+id/story_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_stories" />

        <Button
            android:id="@+id/setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/settings_txt"
            android:background="@drawable/main_settings" />

        <TextView
            android:id="@+id/settings_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignLeft="@+id/setting_btn"
            android:layout_alignRight="@+id/setting_btn"
            android:gravity="center"
            android:text="Impostazioni"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/to_define_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_alignLeft="@+id/to_define_btn"
            android:layout_alignRight="@+id/to_define_btn"
            android:gravity="center"
            android:text="Da definire"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/story_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_btn"
            android:layout_alignLeft="@id/story_btn"
            android:layout_alignRight="@id/story_btn"
            android:gravity="center"
            android:text="Storie"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/find_friends_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/find_friend_btn"
            android:layout_alignRight="@+id/find_friend_btn"
            android:layout_below="@+id/find_friend_btn"
            android:gravity="center"
            android:text="Cerca Amici"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/new_story_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/new_story_btn"
            android:layout_alignRight="@+id/new_story_btn"
            android:layout_below="@+id/new_story_btn"
            android:gravity="center"
            android:text="Nuova Storia"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/find_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_find_friend" />

        <Button
            android:id="@+id/friend_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/main_friend_list" />

        <TextView
            android:id="@+id/friend_list_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/friend_list_btn"
            android:layout_alignRight="@+id/friend_list_btn"
            android:layout_below="@+id/friend_list_btn"
            android:gravity="center"
            android:text="Lista Amici"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/to_define_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/to_define_txt"
            android:background="@drawable/main_to_define" />

    </RelativeLayout>

</RelativeLayout>