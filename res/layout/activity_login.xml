<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity" >
    
    <!-- android:background="@drawable/elderly_1" -->

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:text="@string/login_activity_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"
        android:typeface="sans" />

    <EditText
        android:id="@+id/edittextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtLogin"
        android:layout_below="@+id/txtLogin"
        android:layout_marginTop="20dp"
        android:background="@drawable/txt_input_bordered"
        android:ems="8"
        android:hint="@string/login_username_hint"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textSize="30sp"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        />
    
    <EditText
        android:id="@+id/edittextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edittextUsername"
        android:layout_below="@+id/edittextUsername"
        android:layout_marginTop="20dp"
        android:background="@drawable/txt_input_bordered"
        android:ems="8"
        android:hint="@string/login_password_hint"
        android:inputType="textPersonName|textVisiblePassword"
        android:textColor="#000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edittextPassword"
        android:layout_below="@+id/edittextPassword"
        android:textSize="36sp"
        android:textColor="#000"
        android:background="@drawable/btn_login"
        android:layout_marginTop="20dp"
        android:text="@string/login_button_label" />

    
    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_login"
        android:text="@string/registration_button_label"
        android:textColor="#000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/txtRegistrationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnRegistration"
        android:layout_alignBottom="@+id/btnRegistration"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/btnRegistration"
        android:text="@string/login_registration_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="36sp"
        android:typeface="sans" />
    
</RelativeLayout>
