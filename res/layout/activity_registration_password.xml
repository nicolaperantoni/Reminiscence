<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/watergreen"
    android:padding="10dp" >

    <EditText
        android:id="@+id/registration_password_ET"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registration_password_header"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/txt_input_bordered"
        android:ems="10"
        android:hint="@string/registration_password_hint"
        android:inputType="textVisiblePassword"
        android:selectAllOnFocus="true"
        android:textSize="60sp" >
    </EditText>

    <TextView
        android:id="@+id/registration_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registration_password_ET"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:text="@string/registration_password_suggest_label"
        android:textSize="@dimen/registration_header_font_size" />

    <Button
        android:id="@+id/button_freccia_conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/registration_password_header"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/arrow_continue"
         />

    <Button
        android:id="@+id/button_freccia_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_freccia_conferma"
        android:layout_marginLeft="50dp"
        android:background="@drawable/arrow_back"
         />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_freccia_back"
        android:layout_alignRight="@+id/button_freccia_back"
        android:layout_below="@+id/button_freccia_back"
        android:gravity="center"
        android:background="@color/watergreen"
        android:text="BACK" />

    <Button
        android:id="@+id/btnReloadPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="56dp"
        android:layout_toLeftOf="@+id/button_freccia_conferma"
        android:background="@drawable/reloded" />

    <Button
        android:id="@+id/button_conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_back"
        android:layout_alignBottom="@+id/button_back"
        android:layout_alignLeft="@+id/button_freccia_conferma"
        android:background="@color/watergreen"
        android:gravity="center"
        android:text="CONFIRM" />
   
</RelativeLayout>