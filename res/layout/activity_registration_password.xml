<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/registration_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/registration_password_ET"
        android:gravity="center"
        android:text="@string/password_suggest_label"
        android:textSize="@dimen/registration_header_font_size" />

    <Button
        android:id="@+id/registration_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/confirm_button_label" />

    <Button
        android:id="@+id/registration_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back_button_label" />

    <EditText
        android:id="@+id/registration_password_ET"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_margin"
        android:ems="10"
        android:hint="@string/password_hint"
        android:textSize="@dimen/registration_edittext_font_size" />

</RelativeLayout>