<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient 
                android:startColor="#55A2D4"
                android:endColor="#2980BA"/>
            <stroke
                android:width="1dp"
                android:color="#2d7cb0" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient 
                android:angle="270"
                android:startColor="#55A2D4"
                android:endColor="#2980BA"/>
            <stroke
                android:width="1dp"
                android:color="#2d7cb0" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>