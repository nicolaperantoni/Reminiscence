<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileImageActivity" >

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:maxHeight="500dp"
        android:src="@drawable/default_profile_image"
        android:layout_weight="0.5" />
        
        <Button
        android:id="@+id/btnChangeImgProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_selector"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:text="@string/profile_image_change_button"
        android:layout_weight="0.5" />
        
        
    </LinearLayout>

</RelativeLayout>