<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChangePassword" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

	    <TextView
	        android:id="@+id/change_password_header"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:gravity="center_horizontal"
	        android:text="@string/change_password_suggest_label"
	        android:textColor="@color/white"
	        android:textSize="@dimen/default_textSize_huge" />
	
	    <EditText
	        android:id="@+id/txtNewPassword"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/change_password_header"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="25dp"
	        android:background="@drawable/txt_input_bordered"
	        android:ems="10"
	        android:hint="@string/change_password_hint"
	        android:inputType="textVisiblePassword"
	        android:selectAllOnFocus="true"
	        android:textSize="60sp" />
	
	    <EditText
	        android:id="@+id/txtConfirmPassword"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/txtNewPassword"
	        android:layout_below="@+id/txtNewPassword"
	        android:layout_marginTop="25dp"
	        android:background="@drawable/txt_input_bordered"
	        android:ems="10"
	        android:hint="@string/change_password_confirm_hint"
	        android:inputType="textVisiblePassword"
	        android:selectAllOnFocus="true"
	        android:textSize="60sp" >
	
	        <requestFocus />
	    </EditText>
	    
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		 	android:layout_below="@+id/txtConfirmPassword"
		    android:layout_marginTop="25dp"
		    android:padding="0dp"
		    android:orientation="horizontal" >
	
		    <Button
		        android:id="@+id/btnChangePasswordBack"
		        android:layout_width="0dp"
		        android:layout_weight="0.5"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10dp"
		        android:background="@drawable/btn_default_selector"
		        android:text="@string/back_button_label"
		        android:textSize="60sp"
		        android:textColor="@color/white" />
		    
	   	    <Button
		        android:id="@+id/btnChangePassword"
		        android:layout_width="0dp"
		        android:layout_weight="0.5"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:background="@drawable/btn_default_selector"
		        android:text="@string/confirm_button_label"
		        android:textSize="60sp"
		        android:textColor="@color/white" />
	    
	    </LinearLayout>
    
    </RelativeLayout>
    
</RelativeLayout>