<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/registration_password_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/txt_input_bordered"
        android:ems="10"
        android:paddingRight="100dp"
        android:maxLength="15"
        android:hint="@string/registration_password_hint"
        android:inputType="textVisiblePassword"
        android:selectAllOnFocus="true"
        android:textSize="60sp" >
    </EditText>

    <Button
        android:id="@+id/button_freccia_conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/button_conferma"
        android:background="@drawable/arrow_continue"
         />

    <Button
        android:id="@+id/button_freccia_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/button_back"
        android:background="@drawable/arrow_back"
         />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/button_freccia_back"
        android:layout_alignRight="@+id/button_freccia_back"
        android:gravity="center"
        android:background="@color/red_background_dark"
        android:textSize="@dimen/default_btn_text_size"
        android:text="@string/back_button_label" />

    <Button
        android:id="@+id/button_conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/button_freccia_conferma"
        android:background="@color/red_background_dark"
        android:gravity="center"
        android:text="@string/confirm_button_label"
        android:textSize="@dimen/default_btn_text_size" />

    <Button
        android:id="@+id/btnReloadPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/registration_password_ET"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/refresh" />

    <TextView
        android:id="@+id/registration_password_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/registration_password_suggest_label"
        android:textColor="@color/white"
        android:textSize="@dimen/registration_header_font_size" />
   
</RelativeLayout>